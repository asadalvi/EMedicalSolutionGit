@model EMedicalSolution.Models.Staff

<h2>Delete Employee</h2>

@using (Html.BeginForm("DeleteEmployee", "Employees", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.ID)
    <div class="w3-row w3-margin-top">
        <div class="w3-half">
            <b>User ID</b>
        </div>
        <div class="w3-half">
            @Model.ID
        </div>
    </div>
    <div class="w3-row w3-margin-top">
        <div class="w3-half">
            <b>Name</b>
        </div>
        <div class="w3-half">
            @Model.FirstName @Model.LastName
        </div>
    </div>
    <div class="w3-row w3-margin-top">
        <div class="w3-half">
            <b>DOB</b>
        </div>
        <div class="w3-half">
            @Model.DOB
        </div>
    </div>
    <div class="w3-row w3-margin-top">
        <div class="w3-half">
            <b>Gender</b>
        </div>
        <div class="w3-half">
            @Model.Gender
        </div>
    </div>

    <div class="w3-row w3-margin-top">
        <div class="w3-half">
            <b>Tel</b>
        </div>
        <div class="w3-half">
            @Model.Tel
        </div>
    </div>
    <div class="w3-row w3-margin-top">
        <div class="w3-half">
            <b>Email</b>
        </div>
        <div class="w3-half">
            @Model.Email
        </div>
    </div>

    <div class="w3-row w3-margin-top">
        <div class="w3-half">
            <b>Office</b>
        </div>
        <div class="w3-half">
            @Model.Office.Title
        </div>
    </div>

    <div class="w3-row w3-margin-top">
        <input class="w3-btn-block w3-red" type="submit" value="Delete" />
    </div>
}