@model EMedicalSolution.Models.Office

<h2>Delete Symptom</h2>

@using (Html.BeginForm("Delete", "Offices", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.ID)
    <div class="w3-row w3-margin-top">
        <div class="w3-half">
            <b>ID</b>
        </div>
        <div class="w3-half">
            @Model.ID
        </div>
    </div>
    <div class="w3-row w3-margin-top">
        <div class="w3-half">
            <b>Title</b>
        </div>
        <div class="w3-half">
            @Model.Title
        </div>
    </div>
    
    <div class="w3-row w3-margin-top">
        <div class="w3-half">
            <b>Description</b>
        </div>
        <div class="w3-half">
            @Model.Description
        </div>
    </div>
    <div class="w3-row w3-margin-top">
        <div class="w3-half">
            <b>Location</b>
        </div>
        <div class="w3-half">
            @Model.Location
        </div>
    </div>
    <div class="w3-row w3-margin-top">
        <div class="w3-half">
            <b>Tel</b>
        </div>
        <div class="w3-half">
            @Model.Tel
        </div>
    </div>
    <div class="w3-row w3-margin-top">
        <div class="w3-half">
            <b>Email</b>
        </div>
        <div class="w3-half">
            @Model.Email
        </div>
    </div>

    
    <div class="w3-row w3-margin-top">
        <input class="w3-btn-block w3-red" type="submit" value="Delete" />
    </div>
}